<mjml>
  <mj-head>
    <mj-title>All Content Components Test</mj-title>
    <mj-preview>Testing every content component in a single template</mj-preview>
  </mj-head>
  <mj-body background-color="#f0f0f0">
    <!-- mj-text component -->
    <mj-section background-color="#ffffff" padding="20px">
      <mj-column>
        <mj-text font-size="24px" font-weight="bold" align="center" color="#333333" font-family="Helvetica, Arial, sans-serif">
          Content Components Showcase
        </mj-text>
        <mj-text font-size="14px" color="#666666" line-height="1.6" padding="10px 25px">
          This template tests all content-level MJML components including text, images,
          buttons, dividers, spacers, tables, and raw HTML. Each component is exercised
          with a realistic set of attributes.
        </mj-text>
      </mj-column>
    </mj-section>

    <!-- mj-image component -->
    <mj-section background-color="#ffffff" padding="0 20px">
      <mj-column>
        <mj-image src="https://via.placeholder.com/600x300/4A90D9/ffffff?text=Hero+Image"
                   alt="Hero banner image"
                   width="600px"
                   padding="0"
                   href="https://example.com"
                   title="Click to visit" />
      </mj-column>
    </mj-section>

    <!-- mj-button component -->
    <mj-section background-color="#ffffff" padding="20px">
      <mj-column>
        <mj-button background-color="#4A90D9"
                    color="#ffffff"
                    font-size="16px"
                    font-weight="bold"
                    border-radius="4px"
                    inner-padding="12px 30px"
                    href="https://example.com/cta"
                    align="center">
          Call to Action
        </mj-button>
      </mj-column>
    </mj-section>

    <!-- mj-divider component -->
    <mj-section background-color="#ffffff" padding="0 20px">
      <mj-column>
        <mj-divider border-color="#E0E0E0"
                     border-width="2px"
                     border-style="dashed"
                     padding="10px 25px" />
      </mj-column>
    </mj-section>

    <!-- mj-spacer component -->
    <mj-section background-color="#ffffff" padding="0">
      <mj-column>
        <mj-spacer height="40px" />
      </mj-column>
    </mj-section>

    <!-- mj-table component -->
    <mj-section background-color="#ffffff" padding="0 20px 20px">
      <mj-column>
        <mj-text font-size="18px" font-weight="bold" color="#333333" padding-bottom="10px">
          Product Comparison
        </mj-text>
        <mj-table font-size="14px" color="#555555" cellpadding="8" padding="0 25px">
          <tr style="border-bottom:1px solid #e0e0e0;text-align:left;background-color:#f5f5f5;">
            <th style="padding:8px;">Feature</th>
            <th style="padding:8px;">Basic</th>
            <th style="padding:8px;">Pro</th>
          </tr>
          <tr style="border-bottom:1px solid #e0e0e0;">
            <td style="padding:8px;">Storage</td>
            <td style="padding:8px;">5 GB</td>
            <td style="padding:8px;">100 GB</td>
          </tr>
          <tr style="border-bottom:1px solid #e0e0e0;">
            <td style="padding:8px;">Users</td>
            <td style="padding:8px;">1</td>
            <td style="padding:8px;">Unlimited</td>
          </tr>
          <tr>
            <td style="padding:8px;">Support</td>
            <td style="padding:8px;">Email</td>
            <td style="padding:8px;">24/7 Phone</td>
          </tr>
        </mj-table>
      </mj-column>
    </mj-section>

    <!-- mj-raw component -->
    <mj-section background-color="#ffffff" padding="0 20px 20px">
      <mj-column>
        <mj-raw>
          <!-- Custom tracking pixel -->
          <img src="https://example.com/tracking?id=12345" width="1" height="1" alt="" style="display:block;" />
        </mj-raw>
      </mj-column>
    </mj-section>

    <!-- Footer section combining multiple components -->
    <mj-section background-color="#333333" padding="20px">
      <mj-column>
        <mj-divider border-color="#555555" border-width="1px" padding="0 0 15px 0" />
        <mj-text font-size="12px" color="#aaaaaa" align="center" line-height="1.5">
          You received this email because you signed up for our newsletter.<br />
          &copy; 2025 Example Company, 123 Main Street, Anytown, USA
        </mj-text>
        <mj-spacer height="10px" />
        <mj-button background-color="transparent"
                    color="#aaaaaa"
                    font-size="12px"
                    border="1px solid #aaaaaa"
                    border-radius="3px"
                    inner-padding="8px 16px"
                    href="https://example.com/unsubscribe">
          Unsubscribe
        </mj-button>
      </mj-column>
    </mj-section>
  </mj-body>
</mjml>
