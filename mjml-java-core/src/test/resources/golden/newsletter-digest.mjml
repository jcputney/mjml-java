<mjml>
  <mj-body background-color="#E1E8ED">
    <mj-raw>
      <!-- Header with logo -->
    </mj-raw>
    <mj-section padding-bottom="0px" background-color="white">
      <mj-column width="100%">
        <mj-image
          src="https://via.placeholder.com/50x50/ffffff/333?text=M"
          width="50px"
        ></mj-image>
        <mj-divider
          padding-top="20px"
          padding-bottom="0px"
          padding-left="0px"
          padding-right="0px"
          border-width="1px"
          border-color="#f8f8f8"
        ></mj-divider>
      </mj-column>
    </mj-section>
    <mj-section padding-bottom="0px" background-color="#fcfcfc">
      <mj-column width="100%">
        <mj-text
          align="center"
          font-size="20px"
          color="grey"
          font-family="Helvetica Neue"
          font-weight="200"
          >Here is what you've missed</mj-text
        >
        <mj-divider
          padding-top="20px"
          padding-bottom="0px"
          padding-left="0px"
          padding-right="0px"
          border-width="1px"
          border-color="#f8f8f8"
        ></mj-divider>
      </mj-column>
    </mj-section>
    <mj-raw>
      <!-- Featured Article -->
    </mj-raw>
    <mj-section background-color="white">
      <mj-column width="130px">
        <mj-image
          src="https://via.placeholder.com/100x100/2196F3/fff?text=Article"
          width="100px"
        ></mj-image>
      </mj-column>
      <mj-column width="350px">
        <mj-text align="left" font-size="20px" color="grey"
          >Introducing Our New Platform</mj-text
        >
        <mj-text align="left" color="grey"
          >Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do
          eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad
          minim veniam, quis nostrud exercitation ullamco laboris nisi ut
          aliquip</mj-text
        >
      </mj-column>
    </mj-section>
    <mj-raw>
      <!-- Editor picks section -->
    </mj-raw>
    <mj-section padding-bottom="0px" background-color="#f3f3f3">
      <mj-column>
        <mj-text align="center" font-size="20px" color="rgb(165, 176, 184)"
          >Explore our new features</mj-text
        >
      </mj-column>
    </mj-section>
    <mj-section padding-top="0" background-color="#f3f3f3">
      <mj-column width="100%">
        <mj-image
          src="https://via.placeholder.com/600x300/f3f3f3/333?text=Feature+Screenshot"
        ></mj-image>
      </mj-column>
    </mj-section>
    <mj-raw>
      <!-- Secondary article -->
    </mj-raw>
    <mj-section background-color="#fcfcfc" padding-top="20px">
      <mj-column width="130px">
        <mj-image
          src="https://via.placeholder.com/100x100/4CAF50/fff?text=Tips"
          width="100px"
        ></mj-image>
      </mj-column>
      <mj-column width="350px">
        <mj-text align="left" font-size="20px" color="grey"
          >Right on time!</mj-text
        >
        <mj-text align="left" color="grey"
          >Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do
          eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad
          minim veniam, quis nostrud exercitation ullamco laboris nisi ut
          aliquip</mj-text
        >
      </mj-column>
    </mj-section>
    <mj-raw>
      <!-- Social footer -->
    </mj-raw>
    <mj-section background-color="#f3f3f3">
      <mj-column>
        <mj-text align="center">Stay in touch!</mj-text>
        <mj-social mode="horizontal">
          <mj-social-element name="twitter" href="https://twitter.com/example"></mj-social-element>
          <mj-social-element name="facebook" href="https://facebook.com/example"></mj-social-element>
          <mj-social-element name="linkedin" href="https://linkedin.com/company/example"></mj-social-element>
        </mj-social>
      </mj-column>
    </mj-section>
    <mj-section padding="10px 0">
      <mj-column>
        <mj-text align="center" font-size="11px" color="#999"
          >&copy; 2025 Newsletter Digest. All rights reserved.<br />
          <a href="https://example.com/unsubscribe" style="color: #999">Unsubscribe</a> |
          <a href="https://example.com/preferences" style="color: #999">Preferences</a>
        </mj-text>
      </mj-column>
    </mj-section>
  </mj-body>
</mjml>
